<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ExpenseDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/editNombreGasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del gasto"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editCostoGasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Costo del gasto"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnAgregarDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar descripciÃ³n"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
