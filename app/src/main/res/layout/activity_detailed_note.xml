<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNoteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar detalles"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etLongDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top"
            android:hint="Descripción larga..."
            android:inputType="textMultiLine"
            android:layout_marginTop="12dp" />

        <!-- Placeholder para una imagen que añadirás luego con la cámara -->
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginTop="12dp"
            android:contentDescription="Foto del objeto"
            android:visibility="gone" />

        <!-- Botón que por ahora solo abre la Activity; posteriormente manejará la cámara -->
        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomar foto (pendiente)"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSaveLongDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
